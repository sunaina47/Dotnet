@page "/moviesearchclient"
@inherits IndexBase

<h3>MovieSearchClient</h3>

<div class="container">
    <div class="form-group">
        <input class="form-control" 
        @bind-value="SearchTerm" id="search" 
        placeholder="Enter movie to search for..."
        @bind-value:event="oninput"/>
    </div>
    <div class="col-sm">
        <h5 class="mt-0">Movie Poster Image</h5>
    </div>

    <div class="col-sm">
        <h5 class="mt-0">Title</h5>
    </div>

    <div class="col-sm">
        <h5 class="mt-0">Year</h5>
    </div>
</div>

@foreach (var item in SearchResults)
{
    <div class="row align-items-center border bottom">
        <div class="col-sm">
            <img src="/images/@item.Image" class="mr-3">
        </div>

        <div class="col-sm">
            <h5 class="mt-0">@item.Title</h5>
        </div>

        <div class="col-sm">
            <h5 class="mt-0">@item.Year</h5>
        </div>
    </div>
}
